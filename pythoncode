import os


if __name__ == '__main__':
    print("welcome to RoboSpeaker 1.1. created by Prabhakar")
    while True:
            x = input("Enter What you want me to speak: ")
            if x == "q":
                os.system("say 'bye bye friend'")
                break
            command = f"say{x}"
            os.system(command)
